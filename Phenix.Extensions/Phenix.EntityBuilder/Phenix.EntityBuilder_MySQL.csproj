<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <AssemblyName>Phenix.EntityBuilder</AssemblyName>
    <DefineConstants>TRACE;MySQL</DefineConstants>
    <RootNamespace>Phenix.EntityBuilder</RootNamespace>
    <Version>7.1.1</Version>
    <Authors>ming</Authors>
    <Description>Phenix Framework for .NET Core</Description>
    <Copyright>Copyright © 2007, 2019 Phenixヾ Studio</Copyright>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..\..\Bin_MySQL\</OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\..\Bin_MySQL\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MySql.Data" Version="8.0.16" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Phenix.Core">
      <HintPath>..\..\Bin_MySQL\netcoreapp2.1\Phenix.Core.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
